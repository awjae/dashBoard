    </nav> -->
    <div id="addDashboard_modal">
        <div class="dashboard_modal">
            <h5>새 대시보드 생성</h5>
            <hr>
            <div>
                <span>명칭 : </span><input type="text" id="newDashboardInput">
                <button onclick="fnNewDashboard()">생성</button>
            </div>
        </div>
    </div>

    <div style="margin-left:100px;">
        <div class="dashboard-header">
            <span class="dashboard-header-title">Dashboard</span>
            <ul id="widget-dropdown" class="dropdown-content">
                <li><a href="#!" widget_type="map">지도</a></li>
                <li><a href="#!" widget_type="chart">차트</a></li>
                <li><a href="#!" widget_type="stat">스텟</a></li>
                <li><a href="#!" widget_type="list">리스트</a></li>
                <li><a href="#!" widget_type="text">텍스트</a></li>
            </ul>
            <a class="widget-dropdown-btn dropdown-trigger" href="#!" data-target="widget-dropdown"><span style="vertical-align: middle">위젯</span><i class="material-icons right">arrow_drop_down</i></a>
            <a class="header-btn compact-trigger" href="#!"><span>정렬</span><i class="material-icons right">clear_all</i></a>
            <a class="header-btn save-trigger" href="#!"><span>저장</span><i class="material-icons right">save</i></a>
        </div>

        <div class="dashboard-body">

            <div class="grid-stack">

            </div>
            
        </div>
    </div>
    <script src="js/widgetTemplete.js"></script>
    <script src="ol/ol.js"></script>
    <script src="gridstack/jQuery_touch.min.js"></script>
    <script src="billboard/d3_v4.min.js"></script>
    <script src="billboard/billboard.js"></script>
    <script src="js/testData.js"></script>
    <script>
        var grid;
        $(document).ready(function() {
            //ready시 화면 크기를 클라이언트크기에 맞춤, (dashboard-sidebar-header의 속성이 fixed라서 참고 사용)
            $('.dashboard-body').css('minHeight', parseInt($('.dashboard-sidebar-header').css('height')))
            
            $('.grid-stack').gridstack({
                resizable: {
                    handles: 'se, sw'
                },
                alwaysShowResizeHandle: /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent),
                float: true,
                verticalMargin: 8,
            });
            grid = $('.grid-stack').data('gridstack');

            redraw(grid);

        });

        $('.dashboard-sidebar-body p').click(function(e) {
            
        })

    </script>
    <script src="js/dashBoard.js"></script>
    
</body>
</html>