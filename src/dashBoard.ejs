    <script>
        var grid;
        $(document).ready(function() {
            //ready시 화면 크기를 클라이언트크기에 맞춤(dashboard-sidebar-header의 속성이 fixed라서 참고 사용)
            $('.dashboard-body').css('minHeight', parseInt($('.dashboard-sidebar-header').css('height')))
            


            $('.grid-stack').gridstack({
                resizable: {
                    handles: 'se, sw'
                },
                alwaysShowResizeHandle: /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent),
                float: true
            });
            grid = $('.grid-stack').data('gridstack');
            grid.removeAll();

            redraw(grid);

            //위젯 삭제
            $('.widgetCancel').on('click', function (e) {
                $(e.target).parents('.grid-stack-item')[0].remove();
            })

            //리사이즈
            $(document).on('resizestop', '.grid-stack-item', function(e) {

                var contentsType = $(e.target).children(0).children('#contents').attr('widget_type');
                
                switch (contentsType) {
                    case 'map' :
                        var map = $(e.target).children(0).children('#contents').children(0).data('map');
                        map.updateSize();
                        break;
                    case 'chart' :
                        break;
                    case 'stat' :
                        break;
                    case 'list' :
                        break;
                    case 'text' :
                        break;
                    default :
                        
                        break;
                }

            });
        });

        
    </script>
